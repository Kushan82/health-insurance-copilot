# ===== APPLICATION SETTINGS =====
APP_NAME="Health Insurance Copilot"
APP_VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# ===== SERVER SETTINGS =====
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# ===== OLLAMA CONFIGURATION =====
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2:3b"
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048
OLLAMA_TIMEOUT=120

# ===== CHROMADB CONFIGURATION =====
CHROMA_PERSIST_DIRECTORY="./data/vector_store"
CHROMADB_COLLECTION_NAME="insurance_policies"

# ===== EMBEDDING MODEL =====
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_DIMENSION=384

# ===== LANGSMITH OBSERVABILITY =====
# Sign up at https://smith.langchain.com to get API key
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
LANGCHAIN_API_KEY=""
LANGCHAIN_PROJECT="health-insurance-copilot"

# ===== REDIS CACHE =====
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
CACHE_TTL=3600

# ===== RAG CONFIGURATION =====
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.7

# ===== CACHE CONFIGURATION =====
ENABLE_QUERY_CACHE=true
ENABLE_SEMANTIC_CACHE=true
ENABLE_RESPONSE_CACHE=true
ENABLE_RETRIEVAL_CACHE=true
SEMANTIC_CACHE_THRESHOLD=0.95

# ===== GUARDRAILS =====
ENABLE_GUARDRAILS=true
TOXICITY_THRESHOLD=0.7
ENABLE_PII_DETECTION=true
ENABLE_BIAS_DETECTION=true

# ===== DATA PATHS =====
DATA_DIR="./data"
RAW_DATA_DIR="./data/raw"
PROCESSED_DATA_DIR="./data/processed"
POLICIES_FILE="./data/processed/policies.json"

# ===== CORS =====
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501","http://localhost:8000"]
